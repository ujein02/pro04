<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<!-- 공지사항 목록 -->
	<select id="boardList" resultType="com.kolon.dto.BoardDTO">
		select * from board order by regdate desc
	</select>
	<!-- 글 상세보기 -->
	<select id="boardDetail" resultType="com.kolon.dto.BoardDTO">
		select * from board where seq=#{seq}
	</select>
	<!-- 글 작성하기 -->
	<insert id="boardInsert">
		insert into board values ((select nvl(max(seq), 0)+1 from board), #{title}, #{content}, 'admin', sysdate, 0)
	</insert>
	<select id="totalCount" resultType="integer" >
		select count(*) from board
	</select>
	<delete id="boardDelete">
		delete from board where seq=#{seq}
	</delete>
	<update id="boardEdit">
		update board set title=#{title}, content=#{content} where seq=#{seq}
	</update>
</mapper>